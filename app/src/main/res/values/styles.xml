<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorApp</item>
        <item name="colorPrimaryDark">@color/colorApp</item>
        <item name="colorAccent">@color/colorApp</item>
    </style>

    <style name="TextLabel" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/colorApp3</item>
        <item name="android:textSize">@dimen/txt_size20</item>
        <item name="colorControlNormal">@color/colorApp3</item>
        <item name="colorControlActivated">@color/colorApp3</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/colorApp</item>
        <item name="colorControlActivated">@color/colorApp</item>
    </style>
</resources>
